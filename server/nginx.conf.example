# Load njs module for dynamic port resolution
load_module modules/ngx_http_js_module.so;

# Upstream for Django API
upstream django_api {
    server 127.0.0.1:8000;
}

# JavaScript function to resolve project port
js_import port_resolver from /etc/nginx/nginx_port_resolver.js;

# Map to cache resolved ports (optional, for performance)
# map $id $cached_port {
#     default 0;
#     # Add entries here if you want to cache
# }

server {
    listen 80;
    server_name ~^(?<id>[^.]+)\.projectengine\.dev$;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name ~^(?<id>[^.]+)\.projectengine\.dev$;
    
    ssl_certificate /etc/letsencrypt/live/projectengine.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/projectengine.dev/privkey.pem;
    
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Resolve port using njs function
    js_set $dynamic_proxy_url port_resolver.resolveProxyUrl;
    
    location / {
        # If subdomain is not "api", rewrite path to include project ID
        if ($id != "api") {
            rewrite ^(.*)$ /$id$1 break;
        }
        
        # Proxy to resolved URL
        proxy_pass $dynamic_proxy_url$uri;
        
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        
        proxy_read_timeout 3600s;
        proxy_connect_timeout 75s;
        proxy_send_timeout 3600s;
        proxy_buffering off;
        proxy_request_buffering off;
    }
}
