# Nginx configuration for Project Engine backend
# Place this in /etc/nginx/sites-available/project-engine-api
# Then create a symlink: sudo ln -s /etc/nginx/sites-available/project-engine-api /etc/nginx/sites-enabled/
# Test config: sudo nginx -t
# Reload nginx: sudo systemctl reload nginx

# HTTP to HTTPS redirect (if you have SSL)
server {
    listen 80;
    server_name api.yourdomain.com;  # Change this to your domain
    
    # If you want to redirect HTTP to HTTPS, uncomment below:
    # return 301 https://$server_name$request_uri;
    
    # Or if you want to serve HTTP (not recommended for production):
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts for long-running requests
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }
}

